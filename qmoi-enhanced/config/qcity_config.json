{
  "platforms": {
    "colab": true,
    "cloud": true,
    "local": true
  },
  "features": {
    "trading": true,
    "whatsapp": true,
    "projects": true,
    "updates": true
  },
  "resources": {
    "max_cpu": 90,
    "max_memory": 0.9,
    "max_disk": 0.9,
    "max_network": 1000,
    "auto_scale": true
  },
  "security": {
    "encryption": true,
    "firewall": true,
    "vpn": true,
    "access_control": true,
    "audit_logging": true
  },
  "performance": {
    "optimization": true,
    "monitoring": true,
    "auto_recovery": true,
    "backup": true
  },
  "trading": {
    "strategies": ["momentum", "mean-reversion", "ml-based"],
    "risk_management": {
      "max_drawdown": 0.1,
      "position_size": 0.1,
      "stop_loss": 0.05,
      "take_profit": 0.1
    },
    "monitoring": {
      "real_time": true,
      "alerts": true,
      "reports": true
    }
  },
  "whatsapp": {
    "bot": {
      "enabled": true,
      "auto_reply": true,
      "group_management": true,
      "broadcast": true
    },
    "features": {
      "media": true,
      "automation": true,
      "scheduling": true
    }
  },
  "projects": {
    "auto_create": true,
    "auto_manage": true,
    "resource_allocation": true,
    "documentation": true
  },
  "updates": {
    "auto_update": true,
    "version_control": true,
    "backup": true,
    "rollback": true
  },
  "logging": {
    "level": "INFO",
    "file": "logs/qcity.log",
    "max_size": 10485760,
    "backup_count": 5
  },
  "notifications": {
    "enabled": true,
    "channels": ["email", "whatsapp", "in_app"],
    "priority_levels": ["low", "medium", "high", "critical"]
  },
  "backup": {
    "enabled": true,
    "schedule": "daily",
    "retention": 30,
    "encryption": true
  },
  "monitoring": {
    "health_checks": true,
    "performance_metrics": true,
    "error_tracking": true,
    "resource_usage": true
  },
  "automation": {
    "enabled": true,
    "rules": {
      "resource_optimization": true,
      "error_recovery": true,
      "backup_management": true,
      "update_management": true
    }
  }
}
