{
  "version": 2,
  "builds": [
    { "src": "next.config.mjs", "use": "@vercel/next" },
    { "src": "app/api/**/*.ts", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/app/api/$1.ts" },
    { "source": "/(.*)", "destination": "/app/page.tsx" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)", 
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=(), usb=(), payment=()" }
      ]
    }
  ],
  "functions": {
    "*": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  }
}
