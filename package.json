{
  "name": "qmoi-alpha-ai",
  "version": "1.0.11",
  "description": "Quantum Master Orchestrator Intelligence (QMOI) System",
  "author": "Victor Kwemoi",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "clean": "node scripts/install-or-clean.mjs --clean",
    "install-clean": "node scripts/install-or-clean.mjs",
    "fix:root-modules": "node scripts/fix-root-modules.mjs",
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "node tests/run-tests.mjs",
    "build": "node scripts/build-all.mjs",
    "build:win": "electron-builder --win --publish never",
    "build:linux": "electron-builder --linux --publish never",
    "build:mac": "electron-builder --mac --publish never",
    "electron:build:win": "electron-builder --win --x64 --ia32",
    "electron:build:linux": "electron-builder --linux --x64 --armv7l --arm64",
    "electron:build:mac": "electron-builder --mac --x64 --arm64",

    "prepare": "echo 'Husky prepare skipped (deprecated)'",

    "changelog": "npx auto-changelog --commit-limit false --sort-commits date-desc --hide-credit --template keepachangelog",
    "tag-version": "git add CHANGELOG.md && git commit -m \"docs: update changelog\" || echo 'No changes' && git tag v$npm_package_version && git push origin main --tags",
    "prepublish-release": "npm run changelog && npm run tag-version",
    "publish-release": "npm run prepublish-release && npm run build && node scripts/publish-github-release.mjs",
    "publish": "npm run publish-release"
  },
  "dependencies": {
    "electron": "^28.3.2",
    "electron-updater": "^6.1.1",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "husky": "^9.1.2",
    "lint-staged": "^15.2.0",
    "auto-changelog": "^2.5.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "build": {
    "appId": "com.qmoi.ai",
    "productName": "QMOI AI",
    "artifactName": "qmoiexe-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "QMOI_release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "app/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icons"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/icon.icns"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "thealphakenya",
        "repo": "Alpha-Q-ai"
      }
    ]
  }
}
